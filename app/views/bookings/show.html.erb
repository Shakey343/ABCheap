<div class="abc-banner">
  <div style="display: flex; justify-content: center;">
    <h2 class="first_letter">C</h2><h1 class = "other-letters">onfirmation</h1>
  </div>
</div>

<div class="confirmation-container">
  <div class="container text-center confirmation-info">
    <div class="confirmation-item confirm">
      <p>You're going to <%= @booking.result.destination.split.first %>!</p>
    </div>
    <div class="confirmation-item">
      <h5>Booking Reference:</h5>
      <%= (('A'..'Z').to_a.sample(4)+(1..9).to_a.sample(4)).join %>
    </div>
    <div class="confirmation-item">
      <h5>A confirmation email has been sent to:</h5>
      <p><%= current_user.email %></p>
    </div>
    <div class="confirmation-item calendar">
      <a href=""><h5>Add Journey to Calendar</h5></a>
    </div>
    <div class="confirmation-item wallet">
      <img src="https://images.squarespace-cdn.com/content/v1/542b217de4b0bea213bc8af1/1450732657789-3BU8CDEOH41KNQY6CH1M/image-asset.png?format=1500w" alt="Add to Apple Wallet">
    </div>
    <div class="confirmation-item">
      <h5>City Directions:</h5>
    </div>
    <div class="confirmation-item">
      <h5>Your Journey Breakdown:</h5>
      <div class="confirmation-start-end">
        <p class="start-end-header">Depart from:</p>
        <div class="departure">
          <%= @booking.result.origin %>
          <p><%= @booking.result.start_time.strftime("%-d %^b")%>  <%= @booking.result.start_time.strftime("%R") %></p>
        </div>
      </div>
      <div class="confirmation-start-end">
        <p class="start-end-header">Arrive at:</p>
        <div class="arrival">
          <%= @booking.result.destination %>
          <p><%= @booking.result.end_time.strftime("%-d %^b")%>  <%= @booking.result.end_time.strftime("%R") %></p>
        </div>
      </div>
    </div>
  </div>
</div>

